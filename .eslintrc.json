{
  "parser": "babel-eslint",
  "plugins": ["react", "flowtype"],
  "extends": ["standard", "plugin:react/recommended", "plugin:flowtype/recommended"],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-new": "off",
    "object-curly-spacing": ["error", "never"],
    "one-var": ["error", "always"],
    "react/prop-types": "off"
  }
}
